{
    "manifest_version": 3,
    "name": "Universal Video Speed Controller",
    "version": "1.1.0",
    "description": "Control playback speed of any HTML5 video on any website.",
    "icons": {
        "16": "icons/16.png",
        "192": "icons/192.png",
        "512": "icons/512.png"
    },
    "permissions": ["storage"],
    "action": {
        "default_icon": {
            "16": "icons/16.png",
            "192": "icons/192.png",
            "512": "icons/512.png"
        },
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "css": ["style.css"],
            "run_at": "document_idle",
            "all_frames": true
        }
    ]
}